<h3>Formulaire de contact</h3>

<EditForm Model="MyForm"
          OnValidSubmit="OnSubmitForm"
          Context="ContactContext"
          class="container">
    <DataAnnotationsValidator />

    <div class="row" id="Contact">
        <div class="col-md-6">
            <div class="form-group">
                <label class="col-form-label">Email</label>
                <InputText type="email" @bind-Value="MyForm.Email" class="form-control" />
                <ValidationMessage For="@(() => MyForm.Email)" />
            </div>

            <div class="form-group">
                <label class="col-form-label">Objet</label>
                <InputText @bind-Value="MyForm.Object" class="form-control" />
            </div>
        </div>

        <div class="col-md-6">
            <div class="form-group">
                <label class="col-form-label">Message</label>
                <InputTextArea @bind-Value="MyForm.Message" class="form-control" rows="6" />
            </div>
        </div>
    </div>

    <div class="form-group">
        <button class="btn btn-outline-success" type="submit">Valider</button>
    </div>
</EditForm>



